<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/selection_fragment">

    <fragment
        android:id="@+id/selection_fragment"
        android:name="com.app.marvelcharacters.presentation.views.characterslist.CharactersListFragment"
        android:label="selection_fragment"
        tools:layout="@layout/selection_fragment">

        <action
            android:id="@+id/action_selection_fragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:launchSingleTop="false"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.app.marvelcharacters.presentation.views.characterdetail.CharacterDetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/detail_fragment">
        <argument
            android:name="characterId"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailFragment_to_selection"
            app:popUpTo="@+id/selection_fragment"
            app:enterAnim="@anim/fragment_open_enter" />
    </fragment>

</navigation>